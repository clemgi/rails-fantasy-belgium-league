
<div class="leagues width-adjust">
    <div class="profile-header">
      <h4><%= @league.name %></h4>
      <table class="table sortable">
        <thead>
          <tr>
            <th> Nom
            </th>
            <th> Surnom
            </th>
            <th> Total
            </th>
          </tr>
        </thead>
        <tbody>
          <% @managers.each_with_index do |user, i| %>
          <tr>
            <td>
              <%= i + 1 %>
            </td>
            <td>
              <%= user.nickname %>
            </td>
            <td>
             <%= user.squad.total_points %>
           </td>
         </tr>
       </tbody>
       <% end %>
     </table>
   </div>
</div>
