<div class="text-center">
  <h3>Capitaine</h3>

  <%= form_tag '/account/squad/captain', method: :get do %>
  <% active_players_array = @active_players.map { |player| [player.player.name, player.player_id] } %>
  <div>
  <%= select_tag :captain_player, options_for_select(active_players_array) %>
  </div>
  <br>
  <%= submit_tag 'Assigner le brassard', class: "btn-data" %>
  <% end %>
</div>

<div class="text-center">
  <h3>Changements</h3>
  <div class="row">
    <div class="col-xs-6">Banc</div>
    <div class="col-xs-6">Terrain</div>
  </div>
  <%= form_tag '/account/squad/lineup', method: :get do %>
  <% active_players_array = @active_players.map { |player| [player.player.name, player.player_id] } %>
  <% bench_players_array = @bench_players.map { |player| [player.player.name, player.player_id] } %>
  <div class="row">
    <div class="col-xs-6"><%= select_tag :bench_player, options_for_select(bench_players_array) %></div>
    <div class="col-xs-6"><%= select_tag :active_player, options_for_select(active_players_array) %></div>
  </div>
  <br>
  <%= submit_tag 'Effectuer le changement', class: "btn-data" %>
  <% end %>
</div>

