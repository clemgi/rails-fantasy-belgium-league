<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Sélectionnes 2 gardiens, 5 défenseurs, 5 milieux et 3 attaquants</h2>
      <%= form_tag(selection_account_squad_path, method: "get") do %>
      <%= collection_select(nil, :team_id, @teams, :id, :name, selected: params[:team_id]) %>
      <%= submit_tag "Search", class: "btn-xs btn-primary" %>
      <h2><b><%= @team.name %></b></h2>
      <p><b>Gardiens de but</b></p>
      <% end %>
    </div>  
  </div>
</div>
  <!-- GARDIENS DE BUT -->
<div class="container">
  <div class="row">
    <% @team_goalkeepers.order(:name).each do |player| %>
    <div class="col-xs-12">
      <%= player.name %>
      <%= player.team.name %>
      <%= player.position %>
      <%= player.price %>
      <%= player.total_points %>
      <% if @squad_goalkeepers.count == 2 %>
      <% else %>
        <%= form_tag account_squad_players_path(player_id: player.id) do %>
        <%= submit_tag "Selectionner", class: "btn-xs btn-primary" %>
        <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<!-- Card -->
       <div class="container">
  <div class="row">
    <% @team_goalkeepers.order(:name).each do |player| %>
    <div class="col-xs-3"> 
        <div class="card" style="background-image: url('<%= image_path('ball.jpg') %>')" >
          <div class="card-category">
            <%= player.name %> 
          </div>
          <div class="card-description">
            <h2><%= player.team.name %></h2>
            <p><%= player.price %> M € / <%= player.total_points %>Pts</p>
          </div>
          <div class="card-user avatar avatar-small">
            <%= image_tag 'placeholder.png', class: "avatar",  data: { toggle: 'dropdown'}  %>
          </div>
          <!-- <a class="card-link" href="#"></a> -->
        </div>
              <% if @squad_goalkeepers.count == 2 %>
      <% else %>
        <%= form_tag account_squad_players_path(player_id: player.id) do %>
        <%= submit_tag "Selectionner", class: "btn-xs btn-primary" %>
        <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

  <!-- DEFENDERS -->
<div class="container">  
  <br>
  <div class="row">
    <div class="col-xs-12">
      <p><b>Défenseurs</b></p>
    </div>
  </div>
  <div class="row">
    <% @team_defenders.order(:name).each do |player| %>
    <div class="col-xs-3">
      <%= player.name %>

      <% if @squad_defenders.count == 5 %>
      <% else %>
      <%= form_tag account_squad_players_path(player_id: player.id) do %>
      <%= submit_tag "Selectionner", class: "btn-xs btn-primary" %>
      <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
  <!-- MIDFIELDS -->
  <br>
  <p><b>Milieux de terrain</b></p>
  <div class="row">
    <% @team_midfields.order(:name).each do |player| %>
    <div class="col-xs-3">
      <%= player.name %>

      <% if @squad_midfields.count == 5 %>
      <% else %>
      <%= form_tag account_squad_players_path(player_id: player.id) do %>
      <%= submit_tag "Selectionner", class: "btn-xs btn-primary" %>
      <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
  <!-- FORWARDS -->
  <br>
  <p><b>Attaquants</b></p>
  <div class="row">
    <% @team_forwards.order(:name).each do |player| %>
    <div class="col-xs-3">
      <%= player.name %>

      <% if @squad_forwards.count == 3 %>
      <% else %>
      <%= form_tag account_squad_players_path(player_id: player.id) do %>
      <%= submit_tag "Selectionner", class: "btn-xs btn-primary" %>
      <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
  <!-- SELECTION -->
  <div class="row">
    <div class="col-xs-12">
      <h2>Selection</h2>
    </div>  
  </div>
  <br>
  <p><b>Gardiens de but</b></p>
  <div class="row">
    <% @squad_goalkeepers.each do |squad_player| %>
    <div class="col-xs-3">
      <%= squad_player.player.name %> - <%= squad_player.player.team.name %>
      <%= form_tag account_squad_player_path(squad_player), method: :delete do %>
      <%= submit_tag "Retirer", class: "btn-xs btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
  <br>
  <p><b>Défenseurs</b></p>
  <div class="row">
    <% @squad_defenders.each do |squad_player| %>
    <div class="col-xs-3">
      <%= squad_player.player.name %> - <%= squad_player.player.team.name %>
      <%= form_tag account_squad_player_path(squad_player), method: :delete do %>
      <%= submit_tag "Retirer", class: "btn-xs btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
  <br>
  <p><b>Milieux de terrain</b></p>
  <div class="row">
    <% @squad_midfields.each do |squad_player| %>
    <div class="col-xs-3">
      <%= squad_player.player.name %> - <%= squad_player.player.team.name %>
      <%= form_tag account_squad_player_path(squad_player), method: :delete do %>
      <%= submit_tag "Retirer", class: "btn-xs btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
  <br>
  <p><b>Attaquants</b></p>
  <div class="row">
    <% @squad_forwards.each do |squad_player| %>
    <div class="col-xs-3">
      <%= squad_player.player.name %> - <%= squad_player.player.team.name %>
      <%= form_tag account_squad_player_path(squad_player), method: :delete do %>
      <%= submit_tag "Retirer", class: "btn-xs btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<%=link_to 'Sauvegarder', account_squad_path, class:"search-btn navbar-wagon-item navbar-wagon-button btn" %>