
<div class="profile-content">
  <div class="profile-header">
    <div class="profile-picture avatar-large">
      <% if current_user.facebook_picture_url %>
      <%= image_tag current_user.facebook_picture_url, data: { toggle: 'dropdown'} %>
      <% else %>
      <%= image_tag 'placeholder.png',  data: { toggle: 'dropdown'}  %>
      <% end %>
    </div>
    <div class="nickname-wrapper">
      <div class="nickname">
        <%=link_to current_user.nickname, account_profile_path %>
        <%=link_to edit_account_profile_path do %>
        <i class="fa fa-pencil-square-o"></i>
        <% end %>
      </div>
    <div class="content">
     <p>
       Pr√©nom: <%= current_user.first_name %>
     </p>
